<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @shop.category.name %>
</p>

<p>
  <strong>Name:</strong>
  <%= @shop.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @shop.address %>
</p>

<%= content_tag(:iframe, 'map', src:'https://maps.googleapis.com/maps/api/js?key=AIzaSyDCuNBKDjG8BK-M9iZWfpXGIO0l9IPJZIQ=' + @shop.address, width: '100%', height: 320, frameborder: 0) %>

<br>

<%= link_to 'Delete', @shop,
                    method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<%= link_to 'Edit', edit_shop_path(@shop), class: 'btn btn-primary' %>
<%= link_to 'Back', shops_path, class: 'btn btn-default' %>
